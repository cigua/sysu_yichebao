<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<TextView
		android:id="@+id/text_username"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/text_pwd"
		android:layout_alignLeft="@+id/text_pwd_confirm"
		android:text="@string/username"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<EditText
		android:id="@+id/input_user_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/text_username"
		android:layout_alignRight="@+id/input_pwd"
		android:layout_toRightOf="@+id/text_username"
		android:hint="@string/please_input_username" />

	<TextView
		android:id="@+id/text_pwd"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/text_pwd_confirm"
		android:layout_alignLeft="@+id/text_pwd_confirm"
		android:layout_marginTop="20dp"
		android:text="@string/password"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<EditText
		android:id="@+id/input_pwd"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/text_pwd"
		android:layout_alignRight="@+id/input_pwd_confirm"
		android:layout_toRightOf="@+id/text_pwd"
		android:hint="@string/please_input_password"
		android:inputType="textPassword" />

	<TextView
		android:id="@+id/text_pwd_confirm"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="20dp"
		android:text="@string/confirm"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<EditText
		android:id="@+id/input_pwd_confirm"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/text_pwd_confirm"
		android:layout_marginRight="20dp"
		android:layout_toRightOf="@+id/text_username"
		android:hint="@string/please_confirm_password"
		android:inputType="textPassword" />

	<Button
		android:id="@+id/btn_confirm_register"
		style="@style/green_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignRight="@+id/input_pwd_confirm"
		android:layout_below="@+id/text_pwd_confirm"
		android:enabled="false"
		android:text="@string/register" />

</RelativeLayout><!-- From: file:/Users/hwp/Desktop/项目代码/yichebao-client/app/src/main/res/layout/fragment_register.xml -->