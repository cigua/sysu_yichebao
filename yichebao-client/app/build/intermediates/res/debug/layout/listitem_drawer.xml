<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="10dp"
	android:orientation="horizontal"
	android:padding="10dp" >

	<ImageView
		android:id="@+id/drawer_icon"
		android:layout_width="25dp"
		android:layout_height="25dp"
		android:contentDescription="@string/drawer_icon"
		android:src="@drawable/ic_drawer_home" />

	<TextView
		android:id="@+id/drawer_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="20dp"
		android:text="@string/default_drawer_text"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@color/black" />

</LinearLayout><!-- From: file:/Users/hwp/Desktop/项目代码/yichebao-client/app/src/main/res/layout/listitem_drawer.xml -->